
@{
    ViewBag.Title = "SeeConsultants";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@using MyBank.Models.Entity
@model List<Consultant>

<h1>AdminIndex</h1>
Consultant Table
<table id="tblCons" class="table table-bordered">
    <thead>
    <tr>
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>From</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Fire</th>
        <th>Edit</th>
    </tr>
    </thead>
    @foreach (var conslt in Model)
    {
        <tr>
            <td>@conslt.ID</td>
            <td>@conslt.Fname</td>
            <td>@conslt.LName</td>
            <td>@conslt.FromCountry</td>
            <td>@conslt.Email</td>
            <td>@conslt.Phone</td>
            <td>@Html.ActionLink("Remove", "RemoveConsultant", new { id = conslt.ID }, new { @class = "btn btn-danger", onclick = "return confirm('Are You Sure You Want to Remove This Consultant?')" })</td>
            <td><a href="/Admin/GetConsultant/@conslt.ID" class="btn btn-success">Edit</a></td>
        </tr>
    }
</table>
<a href="/Admin/AddNewConsultant/" class="btn btn-primary"> Add New Consultant</a>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.5/css/jquery.dataTables.min.css" />

<!-- DataTables Başlatma -->
<script>$(document).ready(function () {
        $('#tblCons').DataTable({
            "searching": true, // Arama kutusunu etkinleştir
            "paging": true,   // Sayfalama
            "info": true      // Tablo bilgisi
        });
    });</script>
