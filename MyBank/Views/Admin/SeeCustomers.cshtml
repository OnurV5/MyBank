
@{
    ViewBag.Title = "SeeCustomers";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@using MyBank.Models.Entity
@model List<Customer>

<h1>Customers Admin Panel</h1>


Consultant Table
<table id='tbl1' class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>From</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Consultant</th>
            <th>Deposit</th>
            <th>Fire</th>
            <th>Edit</th>
        </tr>
    </thead>
    @foreach (var cus in Model)
    {
        <tr>
            <td>@cus.ID</td>
            <td>@cus.FName</td>
            <td>@cus.LName</td>
            <td>@cus.FromCountry</td>
            <td>@cus.Email</td>
            <td>@cus.Phone</td>
            <td>@cus.Consultant.Fname @cus.Consultant.LName</td>
            <td>@cus.Deposit.Cash.ToString().TrimEnd('0').TrimEnd(',') @cus.Deposit.Currency</td>
            <td><a href="/Admin/RemoveCustomer/@cus.ID" class="btn btn-danger">Remove</a></td>
            <td><a href="/Admin/GetCustomer/@cus.ID" class="btn btn-success">Edit</a></td>
        </tr>
    }
</table>
<a href="/Admin/AddNewCustomer/" class="btn btn-primary"> Add New Costumer</a>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.5/css/jquery.dataTables.min.css" />

<!-- DataTables Başlatma -->
<script>
    $(document).ready(function () {
        $('#tbl1').DataTable({
            "searching": true, // Arama kutusunu etkinleştir
            "paging": true,   // Sayfalama
            "info": true      // Tablo bilgisi
        });
    });
</script>
